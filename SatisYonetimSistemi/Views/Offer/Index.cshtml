@model List<OfferViewModel>

@{
    ViewData["Title"] = "Satış Yönetim Sistemi";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().OfferTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().StatusName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OfferTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                    @item.Price.ToString("n0") TL
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
            </td>
            <td>
                <a class="text-primary" asp-action="Edit" asp-route-id="@item.OfferId">güncelle</a>/
                <a class="text-primary" asp-action="Delete" asp-route-id="@item.OfferId">sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create">Teklif Ekle</a>
</p>